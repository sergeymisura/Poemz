
pushd ../../assets/less
lessc app.less ../css/app.css

pushd ../js
mkdir compiled
java -jar ../../protected/build/compiler.jar \
	--compilation_level WHITESPACE_ONLY \
	--js lib/jquery/jquery-1.9.1.js \
	--js lib/jquery/jquery.tmpl.min.js \
	--js lib/bootstrap/bootstrap.min.js \
	--js_output_file compiled/lib.js

java -jar ../../protected/build/compiler.jar \
	--compilation_level WHITESPACE_ONLY \
	--js app/app.js \
	--js app/services/api.js \
	--js app/services/bind.js \
	--js app/services/dereferred.js \
	--js app/services/rendering.js \
	--js app/services/validation.js \
	--js_output_file compiled/app.js

